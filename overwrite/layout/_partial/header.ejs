<% let postPage = (page['layout'] === 'post' || page._isNotePagination || page['layout'] === 'note') ? true : false; %>
<header class="<% if (is_home()){ %>home bg-blue-500 dark:bg-slate-800<% } %>">
    <div class="max-container z-10">
        <div class="flex flex-row justify-between md:justify-start items-center py-3">
            <%- partial('index/logo', {icon: true}) %>
            <div class="md:ml-auto flex flex-wrap items-center text-base justify-center">
                <button id="darkMode" class="fadeIn inline-flex items-center justify-center flex-shrink-0 h-8 w-8 rounded-full text-gray-900 ml-1 lg:ml-4 dark:text-gray-300 bg-gray-200 dark:bg-gray-900">
                    <i class="icon-light text-gray-600 dark:text-gray-300 dark:hover:text-white">
                        <%- icon("light") %>
                    </i>
                </button>
                <a href="https://cheatsheets.zip/">
                    <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
                        <span>Original</span>
                    </button>
                </a>
                <a href="https://wangchujiang.com/reference/">
                    <button class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
                        <span>中文版</i>
                    </button>
                </a>
            </div>
        </div>
    </div>
</header>